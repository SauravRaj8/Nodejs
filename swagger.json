{
    "openapi": "3.1.0",
    "info": {
        "title": "Horoscope API",
        "version": "1.0.0"
    },
    "paths": {
        "/signup": {
            "post": {
                "summary": "Signup",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "birthdate": {
                                        "type": "string",
                                        "format": "date"
                                    }
                                },
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "birthdate"
                                ]
                            },
                            "example": {
                                "name": "Saurav",
                                "email": "saurav@gmail.com",
                                "password": "123456",
                                "birthdate": "2001-08-24"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "User created",
                                    "zodiac_sign": "Virgo"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            },
                            "example": {
                                "email": "saurav@gmail.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logged in successfully",
                        "content": {
                            "application/json": {
                                "example": {
                                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/horoscope/today": {
            "get": {
                "summary": "Get today's horoscope",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Horoscope for today",
                        "content": {
                            "application/json": {
                                "example": {
                                    "date": "2025-08-27",
                                    "sign": "Virgo",
                                    "content": "You will have a productive day."
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/horoscope/history": {
            "get": {
                "summary": "Get user's horoscope history (last 7 days)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Horoscope history",
                        "content": {
                            "application/json": {
                                "example": {
                                    "history": [
                                        {
                                            "date": "2025-08-27",
                                            "content": "Today will bring clarity.",
                                            "user_id": "68aeee5887ae44c6660da9b6"
                                        },
                                        {
                                            "date": "2025-08-26",
                                            "content": "Focus on your goals.",
                                            "user_id": "68aeee5887ae44c6660da9b6"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}